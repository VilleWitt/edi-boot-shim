#!/bin/sh
set -e

case "$1" in
    configure)
        mkdir -p /etc/bash_completion.d
        register-python-argcomplete3 edi-boot-shim > /etc/bash_completion.d/edi-boot-shim
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
